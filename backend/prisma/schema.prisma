generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User accounts
model User {
  id            String    @id @default(cuid())
  phone         String?   @unique
  email         String?   @unique
  displayName   String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Profile fields (optional)
  photoUrl      String?
  bio           String?
  location      String?

  // Profile visibility settings (per-field)
  photoVisibility    ProfileVisibility @default(CONNECTIONS)
  bioVisibility      ProfileVisibility @default(CONNECTIONS)
  locationVisibility ProfileVisibility @default(CONNECTIONS)

  // Notification preferences (global)
  emailNotifications          Boolean @default(true)
  smsNotifications            Boolean @default(true)
  wallActivityNotifications   Boolean @default(true)
  connectionEventNotifications Boolean @default(true)

  // Relations
  sessions          Session[]
  verificationCodes VerificationCode[]
  organizedEvents   Event[]           @relation("EventOrganizer")
  rsvps             RSVP[]
  eventRoles        EventRole[]
  notifications     Notification[]
  wallPosts         WallPost[]
  wallReactions     WallReaction[]
  waitlistEntries   Waitlist[]
  massCommunicationsSent     MassCommunication[]          @relation("MassCommunicationOrganizer")
  massCommunicationsReceived MassCommunicationRecipient[] @relation("MassCommunicationRecipient")
  eventNotificationSettings  EventNotificationSetting[]

  @@index([phone])
  @@index([email])
}

enum ProfileVisibility {
  CONNECTIONS
  ORGANIZERS_ONLY
  PRIVATE
}

// Session management
model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token        String   @unique
  deviceInfo   String?  // User agent string
  deviceType   String?  // e.g., "mobile", "desktop", "tablet"
  deviceName   String?  // e.g., "iPhone 15", "Chrome on Windows"
  ipAddress    String?  // IP address for location approximation
  location     String?  // Approximate location (city/region)
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  lastActiveAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

// Verification codes for passwordless auth
model VerificationCode {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // For new user registration
  phone     String?
  email     String?

  // For invite registration - stores invite token context
  inviteToken String?

  code      String
  type      VerificationType
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([phone, code])
  @@index([email, code])
  @@index([userId])
}

enum VerificationType {
  REGISTRATION
  LOGIN
  INVITE_REGISTRATION
}

// Events
model Event {
  id              String      @id @default(cuid())
  title           String
  description     String
  dateTime        DateTime
  endDateTime     DateTime?
  timezone        String      @default("UTC")
  location        String

  // Optional fields
  imageUrl        String?
  capacity        Int?
  waitlistEnabled Boolean     @default(false)
  rsvpDeadline    DateTime?
  category        String?
  dressCode       String?
  notes           String?

  // State management
  state           EventState  @default(DRAFT)

  // Privacy settings
  attendeeListVisibility AttendeeListVisibility @default(ATTENDEES_ONLY)
  allowInviteSharing     Boolean                @default(true)

  // Creator/owner
  creatorId       String
  creator         User        @relation("EventOrganizer", fields: [creatorId], references: [id])

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  rsvps            RSVP[]
  inviteLinks      InviteLink[]
  eventRoles       EventRole[]
  notifications    Notification[]
  emailInvitations EmailInvitation[]
  smsInvitations   SmsInvitation[]
  smsQuota         SmsQuota?
  wallPosts        WallPost[]
  waitlistEntries  Waitlist[]
  massCommunications      MassCommunication[]
  massCommunicationQuota  MassCommunicationQuota?
  questionnaireQuestions  QuestionnaireQuestion[]
  eventNotificationSettings EventNotificationSetting[]

  @@index([creatorId])
  @@index([state])
  @@index([dateTime])
}

enum EventState {
  DRAFT
  PUBLISHED
  CLOSED
  ONGOING
  COMPLETED
  CANCELLED
}

enum AttendeeListVisibility {
  ATTENDEES_ONLY
  ORGANIZERS_ONLY
}

// RSVP responses
model RSVP {
  id        String       @id @default(cuid())
  eventId   String
  event     Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  response  RSVPResponse
  needsReconfirmation Boolean @default(false)

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

enum RSVPResponse {
  YES
  NO
  MAYBE
}

// Event roles (organizers)
model EventRole {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  role      Role     @default(ORGANIZER)

  createdAt DateTime @default(now())

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

enum Role {
  ORGANIZER
}

// Invitation links
model InviteLink {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  token     String   @unique
  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  expiresAt DateTime?

  // Email invitations linked to this invite link
  emailInvitation EmailInvitation?
  // SMS invitations linked to this invite link
  smsInvitation   SmsInvitation?

  @@index([token])
  @@index([eventId])
}

// Email invitations sent for events
model EmailInvitation {
  id            String                @id @default(cuid())
  eventId       String
  event         Event                 @relation(fields: [eventId], references: [id], onDelete: Cascade)
  inviteLinkId  String                @unique
  inviteLink    InviteLink            @relation(fields: [inviteLinkId], references: [id], onDelete: Cascade)

  // Recipient info
  email         String
  recipientName String?

  // Tracking
  status        EmailInvitationStatus @default(PENDING)
  sentAt        DateTime?
  openedAt      DateTime?
  rsvpAt        DateTime?

  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt

  @@index([eventId])
  @@index([email])
  @@index([status])
}

enum EmailInvitationStatus {
  PENDING
  SENT
  OPENED
  RSVPD
  FAILED
}

// SMS invitations sent for events
model SmsInvitation {
  id            String              @id @default(cuid())
  eventId       String
  event         Event               @relation(fields: [eventId], references: [id], onDelete: Cascade)
  inviteLinkId  String              @unique
  inviteLink    InviteLink          @relation(fields: [inviteLinkId], references: [id], onDelete: Cascade)

  // Recipient info
  phone         String
  recipientName String?

  // Tracking
  status        SmsInvitationStatus @default(PENDING)
  sentAt        DateTime?
  rsvpAt        DateTime?

  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@index([eventId])
  @@index([phone])
  @@index([status])
}

enum SmsInvitationStatus {
  PENDING
  SENT
  RSVPD
  FAILED
}

// SMS quota tracking per event
model SmsQuota {
  id          String   @id @default(cuid())
  eventId     String   @unique
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // Daily tracking
  dailyCount  Int      @default(0)
  dailyResetAt DateTime @default(now())

  // Total tracking
  totalCount  Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Notifications for users
model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId   String?
  event     Event?           @relation(fields: [eventId], references: [id], onDelete: Cascade)

  type      NotificationType
  message   String
  read      Boolean          @default(false)

  createdAt DateTime         @default(now())

  @@index([userId])
  @@index([eventId])
  @@index([userId, read])
}

enum NotificationType {
  EVENT_UPDATED
  EVENT_CANCELLED
  RSVP_RECONFIRM
  POST_DELETED_BY_MODERATOR
  WAITLIST_SPOT_AVAILABLE
  NEW_DEVICE_LOGIN
}

// Wall posts on events
model WallPost {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  content   String   // Max 2000 characters for posts, 1000 for replies, enforced in application

  // Reply support - parentId null means top-level post
  parentId  String?
  parent    WallPost?  @relation("WallPostReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   WallPost[] @relation("WallPostReplies")

  // Depth level: 0 = top-level post, 1 = reply, 2 = reply-to-reply (max depth)
  depth     Int      @default(0)

  // Pinning support - only top-level posts can be pinned
  isPinned  Boolean  @default(false)
  pinnedAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  reactions WallReaction[]

  @@index([eventId])
  @@index([authorId])
  @@index([eventId, createdAt])
  @@index([parentId])
  @@index([eventId, isPinned, pinnedAt])
}

// Reactions on wall posts
model WallReaction {
  id        String   @id @default(cuid())
  postId    String
  post      WallPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Currently only heart/like reactions
  type      ReactionType @default(HEART)

  createdAt DateTime @default(now())

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

enum ReactionType {
  HEART
}

// Moderation log for wall posts
model ModerationLog {
  id           String            @id @default(cuid())
  eventId      String
  moderatorId  String
  action       ModerationAction

  // Target post info (stored for reference even after deletion)
  targetPostId String?  // null if post was deleted
  postContent  String?  // Original content for deleted posts
  postAuthorId String?  // Author of the post being moderated

  createdAt    DateTime          @default(now())

  @@index([eventId])
  @@index([moderatorId])
  @@index([eventId, createdAt])
}

enum ModerationAction {
  DELETE
  PIN
  UNPIN
}

// Waitlist for events at capacity
model Waitlist {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Position is determined by createdAt (first-come, first-served)
  createdAt DateTime @default(now())

  // When a spot opens, user is notified and has 24h to confirm
  notifiedAt     DateTime?
  expiresAt      DateTime?

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@index([eventId, createdAt])
}

// Mass communication messages sent to event attendees
model MassCommunication {
  id            String              @id @default(cuid())
  eventId       String
  event         Event               @relation(fields: [eventId], references: [id], onDelete: Cascade)
  organizerId   String
  organizer     User                @relation("MassCommunicationOrganizer", fields: [organizerId], references: [id])

  type          CommunicationType
  subject       String?             // For email only, max 200 chars
  body          String              // Max 10000 chars for email, 160 for SMS
  targetAudience TargetAudience

  // Statistics
  recipientCount Int                @default(0)
  sentCount      Int                @default(0)
  failedCount    Int                @default(0)
  openedCount    Int                @default(0)  // Email only

  sentAt        DateTime            @default(now())
  createdAt     DateTime            @default(now())

  // Relations
  recipients    MassCommunicationRecipient[]

  @@index([eventId])
  @@index([organizerId])
  @@index([eventId, sentAt])
}

// Individual recipient tracking for mass communications
model MassCommunicationRecipient {
  id                    String               @id @default(cuid())
  massCommunicationId   String
  massCommunication     MassCommunication    @relation(fields: [massCommunicationId], references: [id], onDelete: Cascade)
  userId                String
  user                  User                 @relation("MassCommunicationRecipient", fields: [userId], references: [id])

  contactMethod         ContactMethod
  recipient             String               // Actual email or phone

  status                DeliveryStatus       @default(PENDING)
  sentAt                DateTime?
  openedAt              DateTime?
  failedAt              DateTime?
  failureReason         String?

  createdAt             DateTime             @default(now())

  @@unique([massCommunicationId, userId])
  @@index([massCommunicationId])
  @@index([status])
}

// Communication rate limiting per event
model MassCommunicationQuota {
  id              String   @id @default(cuid())
  eventId         String   @unique
  event           Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // Weekly tracking (reset Sunday midnight UTC)
  weeklyEmailCount Int     @default(0)
  weeklySmsCount   Int     @default(0)
  weeklyResetAt    DateTime @default(now())

  // Last communication timestamp to enforce 24h spacing
  lastEmailAt     DateTime?
  lastSmsAt       DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum CommunicationType {
  EMAIL
  SMS
}

enum TargetAudience {
  ALL
  YES_ONLY
  MAYBE_ONLY
  NO_ONLY
  WAITLIST_ONLY
}

enum ContactMethod {
  EMAIL
  SMS
}

enum DeliveryStatus {
  PENDING
  SENT
  FAILED
  OPENED
  BOUNCED
}

// SMS opt-out tracking per event (for STOP handling)
model SmsOptOut {
  id        String   @id @default(cuid())
  eventId   String
  userId    String

  createdAt DateTime @default(now())

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

// Questionnaire questions for events
model QuestionnaireQuestion {
  id          String       @id @default(cuid())
  eventId     String
  event       Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)

  questionText String      // Max 500 characters
  questionType QuestionType
  isRequired   Boolean     @default(false)
  helpText     String?     // Max 200 characters
  orderIndex   Int         // For ordering questions

  // For choice questions - JSON array of strings
  choices      String?     // JSON array like ["Option 1", "Option 2"]

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  // Relations
  responses    QuestionnaireResponse[]

  @@index([eventId])
  @@index([eventId, orderIndex])
}

enum QuestionType {
  SHORT_TEXT
  LONG_TEXT
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  YES_NO
  NUMBER
  DATE
}

// Questionnaire responses from attendees
model QuestionnaireResponse {
  id         String                @id @default(cuid())
  questionId String
  question   QuestionnaireQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  eventId    String
  userId     String

  // Response stored as JSON for flexibility
  // - text questions: string
  // - choice questions: string or array of strings
  // - yes/no: boolean
  // - number: number
  // - date: ISO date string
  response   String                // JSON stringified

  createdAt  DateTime              @default(now())
  updatedAt  DateTime              @updatedAt

  @@unique([questionId, userId])
  @@index([questionId])
  @@index([eventId, userId])
}

// Per-event notification settings
model EventNotificationSetting {
  id              String   @id @default(cuid())
  eventId         String
  event           Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  muteAll         Boolean  @default(false)
  muteWallOnly    Boolean  @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}
